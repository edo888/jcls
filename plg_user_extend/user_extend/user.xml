<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="profile">
        <fieldset name="profile" label="PLG_USER_PROFILE_SLIDER_LABEL">
	        <field name="admin_language" type="languages" client="administrator" default="" label="Back-end Language" description="fieldAdminLanguage" />
	        <field name="language" type="languages" client="site" default="" label="Front-end Language" description="fieldLanguage" />
	        <field name="editor" type="editors" default="" label="User Editor" description="WYSIWYG Editor for this User" />
	        <field name="helpsite" type="helpsites" default="" label="Help Site" description="Help Site for this User" />
	        <field name="timezone" type="timezones" default="" label="Time Zone" description="Time Zone for this User" />
	        <field type="spacer" default="&lt;b&gt;Complaints system fieldeters&lt;b&gt;" />
	        <field name="organization" type="text" default="" label="Organization" description="" size="40" />
	        <field name="area" type="text" default="" label="Area" description="The area of specialty" size="40" />
	        <field name="telephone" type="text" default="" label="Telephone" description="The SMS notifications will be sent to it." size="40" />
	        <field name="role" type="list" default="Guest" label="Roles and Responsibilities" description="">
	            <option value="System Administrator">System Administrator - Manage Users and Global Configuration</option>
	            <option value="Level 1">Level 1 - Manage complaints data and assign them to Level 2 groups</option>
	            <option value="Level 2">Level 2 - Responsible for resolving the complaints assigned by Level 1</option>
	            <option value="Supervisor">Supervisor - Can add comments and view all complaints</option>
	            <option value="Guest">Guest - Can view reports and statistics</option>
	        </field>
	        <field name="receive_notifications" type="radio" default="1" label="Receive Notifications" description="">
	            <option value="0">No</option>
	            <option value="1">Yes</option>
	        </field>
	        <field name="receive_by_email" type="radio" default="1" label="Receive Notifications By Email" description="">
	            <option value="0">No</option>
	            <option value="1">Yes</option>
	        </field>
	        <field name="receive_by_sms" type="radio" default="0" label="Receive Notifications By SMS" description="">
	            <option value="0">No</option>
	            <option value="1">Yes</option>
	        </field>
        </fieldset>
    </fields>
</form>