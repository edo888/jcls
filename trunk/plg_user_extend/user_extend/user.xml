<?xml version="1.0" encoding="utf-8"?>
<form>
    <params>
        <param name="admin_language" type="languages" client="administrator" default="" label="Back-end Language" description="paramAdminLanguage" />
        <param name="language" type="languages" client="site" default="" label="Front-end Language" description="paramLanguage" />
        <param name="editor" type="editors" default="" label="User Editor" description="WYSIWYG Editor for this User" />
        <param name="helpsite" type="helpsites" default="" label="Help Site" description="Help Site for this User" />
        <param name="timezone" type="timezones" default="" label="Time Zone" description="Time Zone for this User" />
        <param type="spacer" default="&lt;b&gt;Complaints system parameters&lt;b&gt;" />
        <param name="organization" type="text" default="" label="Organization" description="" size="40" />
        <param name="area" type="text" default="" label="Area" description="The area of specialty" size="40" />
        <param name="telephone" type="text" default="" label="Telephone" description="The SMS notifications will be sent to it." size="40" />
        <param name="role" type="list" default="Guest" label="Roles and Responsibilities" description="">
            <option value="System Administrator">System Administrator - Manage Users and Global Configuration</option>
            <option value="Level 1">Level 1 - Manage complaints data and assign them to Level 2 groups</option>
            <option value="Level 2">Level 2 - Responsible for resolving the complaints assigned by Level 1</option>
            <option value="Supervisor">Supervisor - Can add comments and view all complaints</option>
            <option value="Guest">Guest - Can view reports and statistics</option>
        </param>
        <param name="receive_notifications" type="radio" default="1" label="Receive Notifications" description="">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="receive_by_email" type="radio" default="1" label="Receive Notifications By Email" description="">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="receive_by_sms" type="radio" default="0" label="Receive Notifications By SMS" description="">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
    </params>
</form>